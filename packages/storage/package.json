{
    "name": "@prepbuddy/storage",
    "version": "1.0.0",
    "description": "Storage service for PrepBuddy - localStorage-based progress tracking",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
    },
    "keywords": [
        "storage",
        "localstorage",
        "prepbuddy"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "~5.8.2"
    }
}